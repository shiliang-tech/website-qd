<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qd.mapper.BgmMapper">


    <update id="update" parameterType="com.qd.entity.Bgm">
        UPDATE bgm
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="artist != null">artist = #{artist},</if>
            <if test="audioUrl != null">audio_url = #{audioUrl},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="getOverview" resultType="com.qd.vo.BgmVO">
        select * from bgm
        where status = 1
        order by sort asc,created_at desc
    </select>

</mapper>
