<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qd.mapper.TagMapper">


    <select id="getOverview" resultType="com.qd.vo.TagOverviewVO">
        select * from tag
        where status = 1
        order by created_at desc
    </select>

    <select id="list" resultType="com.qd.vo.TagVO">
        select * from tag
        order by created_at asc
    </select>

    <update id="update" parameterType="com.qd.entity.Tag">
        UPDATE tag
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="slug != null">slug = #{slug},</if>
            <if test="articleCount != null">article_count = #{articleCount},</if>
            <if test="status != null">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
            <if test="deletedAt != null">deleted_at = #{deletedAt},</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
